
 <%=flash[:success]%>
 <div class = "jumbotron">
    <% if user_signed_in? %>
     <h1>Bienvenue <%= current_user.email %> sur Eventbreitz</h1>
     <%end%>
     <h4>Crée des evenements quand et comme tu veux.</h4>
   
         </br>
       
 </div>
 
 
           <h2 class="h1-responsive font-weight-bold my-5">Voici quelques evenements</h2>
 
 
 <section>
 <div class="card-deck">
 <%Event.all.each do |event|%>
 <div class="col-sm-4 mb-3">
 <div class="card">
   <div class="card-header">
     Evenement #<%=event.id%><br>
   </div>
   <div class="card-body align-center">
     <blockquote class="blockquote mb-0">
       <p><%=event.title%></p>
       <footer class="blockquote-footer">
       <div class="row justify-content-between align-self-center mx-3">
         <p>Créé par <%=event.admin.first_name%> <%=event.admin.last_name%></p>
         <a class="btn btn-info" <%= link_to "Voir plus", event_path(event.id)%></a>
       </div>
       </footer>
     </blockquote>
   </div>
 </div>
 </div>
 <%end%>
 </div>
 </section>
 
 
 